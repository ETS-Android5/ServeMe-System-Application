<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cust_main_menu"
    android:background="@drawable/cust_login">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/nav_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="760dp"
                app:menu="@menu/bottom_navigation"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="300dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/menu_list"/>

            <TextView
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:fontFamily="@font/qs_light"
                android:text="Hi Amey,"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"
                android:textSize="60dp" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginTop="150dp"
                android:layout_marginStart="10dp"
                android:text="My Dashboard"
                android:textSize="25dp"
                android:fontFamily="@font/qs_light"
                android:textColor="@color/white"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="220dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/srq_log"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/serv_req" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/srq_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/trans"
                            android:text=" Service\n Request"
                            android:textColor="#000000"
                            android:textSize="18dp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="220dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/myo_log"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/my_orders" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/myo_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/trans"
                            android:text="My\nOrders"
                            android:textColor="#000000"
                            android:textSize="18dp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/shb_log"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/show_bids" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/shn_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/trans"
                            android:text="Bids"
                            android:textColor="#000000"
                            android:textSize="18dp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sch_log"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/search_ic" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sch_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/trans"
                            android:text="Search"
                            android:textColor="#000000"
                            android:textSize="18dp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </GridLayout>

        </RelativeLayout>

    </LinearLayout>


</ScrollView>

