<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_gr"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/trans_logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/last_screen" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/menu_list" />

    <TextView
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/qs_light"
        android:text="Login Details"
        android:textColor="@color/black"
        android:textSize="40dp" />


    <EditText
        android:id="@+id/log_email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:background="@drawable/button_gr"
        android:fontFamily="@font/qs_light"
        android:hint="Enter Email"
        android:paddingLeft="20dp"
        android:textSize="22dp" />

    <CheckBox
        android:id="@+id/showpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="550dp"
        android:text="Show Password" />


    <EditText
        android:id="@+id/log_pass"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="520dp"
        android:background="@drawable/button_gr"
        android:fontFamily="@font/qs_light"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/failed_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text=" "
        android:textColor="@color/red"
        android:layout_marginTop="570dp"
        />

    <TextView
        android:id="@+id/fgt_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginTop="565dp"
        android:text="Forgot Password?"
        android:textColor="@color/red" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/v_l_button"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"
        android:background="@drawable/custom_gr"
        android:fontFamily="@font/qs_light"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="22dp" />

</RelativeLayout>