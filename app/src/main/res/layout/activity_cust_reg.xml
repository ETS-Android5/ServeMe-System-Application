<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cust_login"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/settings"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/qs_light"
        android:text="Please Enter Your Details"
        android:textColor="@color/white"
        android:textSize="33dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reg_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:background="@drawable/button_out"
        android:fontFamily="@font/qs_light"
        android:hint="Name"
        android:textColorHint="@color/black"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/reg_email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:background="@drawable/button_out"
        android:fontFamily="@font/qs_light"
        android:hint="Email"
        android:textColorHint="@color/black"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/reg_ph"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:background="@drawable/button_out"
        android:fontFamily="@font/qs_light"
        android:hint="Phone Number"
        android:textColorHint="@color/black"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/reg_add"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:background="@drawable/button_out"
        android:fontFamily="@font/qs_light"
        android:hint="Address"
        android:textColorHint="@color/black"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/reg_pass"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:background="@drawable/button_out"
        android:fontFamily="@font/qs_light"
        android:hint="Password"
        android:textColorHint="@color/black"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/reg_pass_c"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:background="@drawable/button_out"
        android:fontFamily="@font/qs_light"
        android:hint="Confirm Password"
        android:textColorHint="@color/black"
        android:textSize="22dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/c_r_button"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="630dp"
        android:background="@drawable/custom_lb"
        android:fontFamily="@font/qs_light"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="22dp" />


</RelativeLayout>