<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cust_main_menu"
    android:background="@drawable/back_gr">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="300dp"
                android:background="@drawable/settings"/>

            <TextView
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:text="Select the services you would like to provide"
                android:textSize="30dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/qs_light"
                android:textColor="@color/white"/>
            
            <TextView
                android:id="@+id/print_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="4">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="220dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_apl_log"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/appliances" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_apl_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/trans"
                            android:text="Appliances"
                            android:textColor="#000000"
                            android:textSize="16dp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="220dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_elec_log"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/electrical" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_elec_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/trans"
                            android:text="Electrical"
                            android:textColor="#000000"
                            android:textSize="16dp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_plb_log"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/plumb" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_plb_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/trans"
                            android:text="PLUMBING"
                            android:textColor="#000000"
                            android:textSize="18dp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_hcl_log"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/home_clean" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_hcl_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/trans"
                            android:text="Home\nCleaning"
                            android:textColor="#000000"
                            android:textSize="16dp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_ttr_log"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/tutor" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_ttr_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/trans"
                            android:text="Tutoring"
                            android:textColor="#000000"
                            android:textSize="17dp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_pam_log"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/move" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_pam_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/trans"
                            android:text="Packaging\nand\nMoving"
                            android:textColor="#000000"
                            android:textSize="15dp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_cpr_log"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/comp_repair" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_cpr_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/trans"
                            android:text="Computer\nRepair"
                            android:textColor="#000000"
                            android:textSize="16dp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_hrp_log"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/paint" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/v_hrp_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:background="@drawable/trans"
                            android:text="Home Repair\nand\nPainting"
                            android:textColor="#000000"
                            android:textSize="14dp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </GridLayout>

        </RelativeLayout>

    </LinearLayout>


</ScrollView>

