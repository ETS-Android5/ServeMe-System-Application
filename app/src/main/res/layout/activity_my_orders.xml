<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cust_main_menu"
    android:background="@drawable/untitled_design__1_">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="300dp"
                android:background="@drawable/menu_list"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/go_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/last_screen" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:text=" My Orders,"
                android:textSize="50dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/qs_light"
                android:textColor="@color/white"/>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="220dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/co_log"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/untitled_design" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/co_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/trans"
                            android:text=" Current\n Orders"
                            android:textColor="#000000"
                            android:textSize="18dp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="220dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/po_log"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/prev_c" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/po_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/trans"
                            android:text="Past\nOrders"
                            android:textColor="#000000"
                            android:textSize="18dp" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </GridLayout>

        </RelativeLayout>

    </LinearLayout>


</ScrollView>

